# Copy this file to .env and fill in the required values.

# Required: Telegram bot token issued by BotFather
TELEGRAM_BOT_TOKEN=PASTE_YOUR_TOKEN_HERE

# Optional: override the bot username if it differs from the default
TELEGRAM_BOT_USERNAME=OchakovoMonitorBot

# Optional: public URL (https, no path) for automatic webhook registration
TELEGRAM_WEBHOOK_PUBLIC_URL=https://your-domain.example

# Optional: webhook path. Keep in sync with the Telegram Bot API webhook URL
TELEGRAM_WEBHOOK_PATH=/telegram/webhook

# Optional: comma-separated list of keywords that trigger incidents
MONITORING_KEYWORDS=??????,????,??????

# Optional: database credentials (override defaults in application.properties)
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/chat_monitor
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres
